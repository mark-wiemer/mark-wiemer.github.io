---
import Footer from "../components/Footer.astro";
const style = "/styles.css";
interface Props {
  pageTitle: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="stylesheet" href={style} />
    <meta name="generator" content={Astro.generator} />
    <title>{Astro.props.pageTitle} - markwiemer.com</title>
  </head>
  <body>
    <div class="article">
      <slot />
      <Footer />
    </div>
    <script is:inline>
      (() => {
        const processLinks = () => {
          const anchors = document.querySelectorAll("a[href]");
          for (const a of anchors) {
            const href = a.getAttribute("href");
            if (!href) continue;
            // opt-out if requested
            if (a.getAttribute("data-external-target-ignore") === "true") continue;
            // skip non-navigational or same-page links
            if (
              href.startsWith("#") ||
              href.startsWith("mailto:") ||
              href.startsWith("tel:") ||
              href.startsWith("javascript:")
            )
              continue;
            let url;
            try {
              url = new URL(href, document.baseURI);
            } catch (e) {
              continue;
            }
            // Only modify links that go to a different origin
            if (url.origin !== window.location.origin) {
              if (!a.hasAttribute("target")) a.setAttribute("target", "_blank");
              const rel = (a.getAttribute("rel") || "").split(" ").filter(Boolean);
              if (!rel.includes("noopener")) rel.push("noopener");
              if (!rel.includes("noreferrer")) rel.push("noreferrer");
              a.setAttribute("rel", rel.join(" "));
            }
          }
        };
        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", processLinks, { once: true });
        } else {
          processLinks();
        }
      })();
    </script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
