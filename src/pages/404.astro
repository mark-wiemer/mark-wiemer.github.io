---
// Client-side redirects for static hosting.
// This file builds to /404.html.
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Not found</title>
    <meta name="robots" content="noindex" />
  </head>
  <body>
    <script>
      (function () {
        // If a static host serves /404.html for unknown paths (e.g. GitHub Pages),
        // we can do client-side rewrites here.
        const { pathname } = window.location;

        if (pathname.startsWith("/games")) {
          console.log("Redirecting to trailing slash for /games");
          const lastSegment = pathname.split("/").pop();
          const looksLikeFile = lastSegment && lastSegment.includes(".");

          if (!looksLikeFile) {
            window.location.replace((pathname + "/index.html").replace(/\/\/+/g, "/"));
            return;
          }
        }

        // Default: show a plain 404.
        document.body.textContent = "404";
      })();
    </script>
  </body>
</html>
